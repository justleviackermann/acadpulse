
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Profiles: Users can read/write their own profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Classes: 
    // - Teachers can create and read their own classes
    // - Students can read classes they are members of
    match /classes/{classId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (
        resource.data.teacherUid == request.auth.uid || 
        request.auth.uid in resource.data.studentUids
      );
      allow update: if request.auth != null && (
        resource.data.teacherUid == request.auth.uid || 
        request.auth.uid in resource.data.studentUids
      );
    }
    
    // Tasks:
    // - Students can read/write their own tasks
    // - Teachers can NEVER read private personal tasks (enforced by application query filtering, 
    //   but here we restrict write access)
    match /tasks/{taskId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && resource.data.studentUid == request.auth.uid;
      
      // Teachers can read aggregate metadata via specific cloud functions or restricted queries 
      // but strictly speaking, direct doc access is restricted to the student.
    }
  }
}
